public class Main{
    static void n(int a,int j){
    
         if(j>10 || a<0)
         {
             System.out.println(" ");
         }
         else
         {
          
           System.out.println(a+" * "+j+" = "+a*j);
            n(a,++j);
         }
    }

	public static void main(String[] args) 
	{
	     System.out.println("enter the value");
	 Scanner sc = new Scanner(System.in);
	 int a=sc.nextInt();
	 int j=0;
	 n(a,j);
	}
}
